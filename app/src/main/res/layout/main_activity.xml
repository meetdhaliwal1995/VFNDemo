<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/exoPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ibGallery"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_play"
        android:backgroundTint="@color/color_01ba61"
        android:background="@color/color_000000"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/ibCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ibGallery"
        android:contentDescription="@string/app_name"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_play"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/color_01ba61"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/ibGallery"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ibCamera"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/app_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>